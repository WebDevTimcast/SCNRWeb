@model SubverseWeb.Models.CMS.CategoryViewModel;
@{
    ViewData["Title"] = "Category - " + Model.CategoryRecord.DisplayName;
}

<section class="section section-lg bg-gray-1 text-center">
    <div class="container container-wide">
        <div class="row row-90">
            <div class="col-lg-9">
                <h2>Category - @Model.CategoryRecord.DisplayName</h2>
                <div class="row row-30 row-flex">
                    @foreach (var record in Model.ContentRecords)
                    {
                        @await Html.PartialAsync("ContentRecord", record)
                    }
                </div>
                @await Html.PartialAsync("Paged", Model.PageVM)
            </div>
            <div class="col-lg-3 layout-aside-wrap_extended">
                @await Html.PartialAsync("RightNav")
            </div>
        </div>
    </div>
</section>

