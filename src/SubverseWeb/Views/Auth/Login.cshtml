@model SubverseWeb.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="section section-lg bg-gray-1 text-center">
    <div class="container container-wide">
        <div class="row row-90">
            <div class="col-lg-5"></div>
            <div class="col-lg-2">
                <form asp-controller="login" asp-action="" method="post" class="needs-validation" novalidate>
                    <h2 style="color:red;">@Model?.ErrorMessage</h2>
                    <div class="form-group">
                        <label asp-for="LoginName"></label>
                        <input class="form-control" asp-for="LoginName" />
                        <span asp-validation-for="LoginName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>

                <br />

                <p>
                    <h4> -- or --</h4>
                    <a class="btn btn-primary" asp-area="" asp-controller="register" asp-action="">Register</a>
                </p>
            </div>
            <div class="col-lg-5"></div>
        </div>
    </div>
</section>

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
