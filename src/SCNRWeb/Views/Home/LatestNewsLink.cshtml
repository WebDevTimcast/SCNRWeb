@model ON.Fragments.Content.ContentListRecord

<div class="article t-pad:5px:bot">
    <div class="article ">
        <div class="article-block ">
            <a href="/content/@(Model.ContentID)/@(Model.URL)" class="image">
                <img src="/image/@Model.FeaturedImageAssetID" alt="@Model.Title" />
            </a>
            <div class="meta t-pad:15px:top t-pad:50pc:bot">
                <a href="/content/@(Model.ContentID)/@(Model.URL)">
                    <div class="summary">
                        <h2 class=" t-txt:grey3 t-txt:h4">@Model.Title</h2>
                        <div class="t-txt:xs t-txt:grey1 t-fnt:1 t-pad:5px:top">
                            @Model.PublishOnUTC.ToDateTime().ToLocalTime().ToString("MM.d.yy")
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
