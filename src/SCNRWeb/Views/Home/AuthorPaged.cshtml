@model SCNRWeb.Models.CMS.News.AuthorViewModel
@{
    ViewData["Title"] = "Articles by " + Model.Author.Data.DisplayName;
}

<div class=" t-bg:clr4  t-pad-top t-marg-50pc-top t-marg-bot  txt-lght t-pad-50pc-rt t-pad-50pc-lt t-pad-bot author-block ">
    <div class="t-flex:valign:top t-pad t-contain t-pos-cntr author ">
        <div class="thumbnail">
            <div class="image"><img width="96" height="96" src="/image/profile/@Model.Author.UserID" class="avatar avatar-96 photo" alt="" loading="lazy" sizes="(max-width: 96px) 100vw, 96px" /></div>
        </div>
        <summary>
            <h1 class="t-txt-h2 t-pad-33pc-top t-pad-33pc-bot t-txt-wht">Articles by @Model.Author.Data.DisplayName</h1>
            <p>
                @Model.Author.Data.Bio
            </p>
        </summary>
    </div>
</div>
<div class=" t-pad:50pc:bot t-pad:bot:l">
    <div class="t-contain t-pos:cntr">
        <div class="columns t-marg:50pc:top ">
            <div class="index-items ">
                <div class=" t-marg:50pc:top t-pad:15px:rt:xs t-pad:15px:lt  t-pad:15px:rt">
                    <div class="t-grid:l:65pc article-links">
                        <div class="t-pad:15px:bot t-pad:15px:lt">
                            <h2 class="t-display:inline  t-txt:h3">Results </h2><h3 class="t-display:inline t-txt:h3 t-fnt:light pg-results">  Page: @Model.PageVM.CurrentPageNum</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class=" t-pad:50pc:bot t-pad:bot:l">
    <div class="t-contain t-pos:cntr">
        <div class="article-links t-pad:15px:rt t-pad:15px:lt">
            <div class="t-grid:s:fit:2 t-grid:m:fit:4 ">
                @foreach (var rec in Model.PagedRecords)
                {
                    <div class="article  t-marg:50pc:bot ">
                        @await Html.PartialAsync("BottomFullNewsLink", rec)
                    </div>
                }
            </div>
        </div>
        <div class="t-contain t-pos:cntr t-txt:cntr  t-marg:top  fnt-secondary">
            @await Html.PartialAsync("Paged", Model.PageVM)
        </div>
    </div>
</div>









