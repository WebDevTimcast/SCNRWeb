@model SCNRWeb.Models.CMS.PickImageViewModel;
@{
    Layout = "_Manage";
    ViewData["Title"] = "Pick Image";
}

<a asp-action="EditChannelGet">&lt;&lt;&lt; Back</a>
<br />
<br />

<form method="get">
    <input name="s" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<br />
<br />

<div class="container container-wide">
    <div class="row row-90">
        <div class="col-lg-12">
            <div class="row row-40 row-flex">
                @foreach (var record in Model.Records)
                {
                    <div class="col-md-6 col-xl-4 col-xxl-3">
                        <a asp-action="ImagePicked" asp-route-id="@Model.Id" asp-route-aid="@record.AssetID"><img src="/image/@(record.AssetID)" alt="@record.Caption" title="@record.Caption" /></a>
                    </div>
                }
            </div>
            @await Html.PartialAsync("Paged", Model.PageVM)
        </div>
    </div>
</div>
